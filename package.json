{
  "name": "buncn",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "scripts/*",
    "docs/*"
  ],
  "scripts": {
    "build": "cd apps/api && bun run build & cd apps/ui && bun run build",
    "build:cli": "cd scripts/create-buncn && bun run build",
    "dev": "cd apps/api && bun run dev & cd apps/ui && bun run dev",
    "migrate": "cd apps/api && bun run migrate"
  },
  "trustedDependencies": [
    "@biomejs/biome",
    "@swc/core",
    "@tailwindcss/oxide",
    "create-buncn",
    "esbuild"
  ]
}