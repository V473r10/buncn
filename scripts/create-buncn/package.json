{
  "name": "create-buncn",
  "version": "0.1.3",
  "description": "Scaffold a new Buncn monorepo project",
  "type": "module",
  "bin": {
    "create-buncn": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && node ./scripts/postbuild.js",
    "dev": "bun run build && bun run start",
    "start": "bun run build && node dist/index.js",
    "prepare": "bun run build",
    "release": "bumpp && npm publish --access public"
  },
  "keywords": [
    "bun",
    "monorepo",
    "template",
    "scaffold"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@clack/prompts": "^0.10.1",
    "picocolors": "^1.1.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^22.15.18",
    "bumpp": "^9.2.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
